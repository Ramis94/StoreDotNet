@model Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Корзина:</b>
        @Model.Lines.Sum(x => x.Quantity) товар(а),
        @Model.ComputeTotalValue().ToString("c")
    </span>
    @Html.ActionLink("Купить", "Index", "Cart", new
{
    returnUrl =
        Request.Url.PathAndQuery
}, null)
</div>
